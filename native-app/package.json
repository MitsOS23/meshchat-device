{
  "name": "meshchat-ios",
  "version": "1.0.0",
  "description": "Native iOS app for MeshChat off-grid messaging device",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "build:ios": "cd ios && xcodebuild -workspace MeshChat.xcworkspace -scheme MeshChat -configuration Release -derivedDataPath build",
    "clean": "cd ios && xcodebuild clean && cd .. && npx react-native clean",
    "pods": "cd ios && pod install",
    "postinstall": "cd ios && pod install"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.73.0",
    "@react-navigation/native": "^6.1.0",
    "@react-navigation/stack": "^6.3.0",
    "@react-navigation/bottom-tabs": "^6.5.0",
    "react-native-safe-area-context": "^4.8.0",
    "react-native-screens": "^3.29.0",
    "react-native-ble-plx": "^3.1.0",
    "@react-native-community/geolocation": "^3.2.0",
    "react-native-permissions": "^4.1.0",
    "react-native-maps": "^1.8.0",
    "react-native-vector-icons": "^10.0.0",
    "react-native-push-notification": "^8.1.0",
    "react-native-haptic-feedback": "^2.2.0",
    "@reduxjs/toolkit": "^2.0.0",
    "react-redux": "^9.0.0",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "react-native-keychain": "^8.1.0",
    "react-native-background-job": "^1.1.0",
    "react-native-crypto-js": "^1.0.0",
    "react-native-uuid": "^2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.73.0",
    "@react-native/metro-config": "^0.73.0",
    "@react-native/typescript-config": "^0.73.0",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "2.8.8",
    "react-test-renderer": "18.2.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "react-native",
    "ios",
    "bluetooth",
    "lora",
    "mesh-networking",
    "off-grid",
    "messaging",
    "gps",
    "emergency-communication"
  ],
  "author": "MeshChat Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MitsOS23/meshchat-device.git",
    "directory": "native-app"
  },
  "bugs": {
    "url": "https://github.com/MitsOS23/meshchat-device/issues"
  },
  "homepage": "https://github.com/MitsOS23/meshchat-device#readme"
}
